@model Event
@{
    ViewBag.Title = "Create Event";
}
<div class="container">
    <div class="m-1 p-1">
        <div class="bg-info p-2"><h4>@ViewBag.Title</h4></div>
    </div>

    <form asp-controller="EAdmin" asp-action="Create" method="post">
        <input type="hidden" asp-for="EventID" />
        <div class="form-group">
            <label asp-for="Header"></label>
            <div><span asp-validation-for="Header" class="text-danger"></span></div>
            <input asp-for="Header" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <div><span asp-validation-for="Description" class="text-danger"></span></div>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Category"></label>
            <div><span asp-validation-for="Category" class="text-danger"></span></div>
            <input asp-for="Category" class="form-control" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>

</div>


@{
    ViewData["Title"] = "News";
}

@model NewsPostViewModel

<div class="d-flex justify-content-between">
    <h1 class="display-3">News</h1>
    <div class="align-self-center">
        <button class="btn btn-outline-primary float-right" id="newPostButton" data-toggle="modal" data-target="#newPostModal">Add a news post</button>
    </div>
</div>

<div id="newPostModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">New Post</h4>
            </div>

            <div class="modal-body">
                <partial name="_AddNewPost" model="@new NewsPost()" />
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@foreach (var n in Model.NewsPosts)
{
    <div>
        @if (n.TimeOfPosting.HasValue)
        {
            <a class="mb-1 text-muted">@n.TimeOfPosting.Value.ToString("MMMM d, yyyy")</a>
        }
        <h2 class="display-4">@n.PostHeadline</h2>
        <div>@n.PostContent</div>
    </div>
}

<div page-model="@Model.PagingInfo" asp-action="News"
     page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>

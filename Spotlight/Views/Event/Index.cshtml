
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ItemsListViewModel
<<div class="bgded overlay" style="background-image:url('/image/events.jpg');">
    <section id="breadcrumb" class="hoc clear">
        <i class="fas fa-hacker-news fa-3x"></i>
        <h6 class="heading">Events</h6>
    </section>
</div>

<div class="wrapper row3">
    <main class="hoc container clear">

        @foreach (var p in Model.Events)
        {
         <div class="card">
             <div class="card-body">
                 <article>
                     <header>
                         <address>
                             <a id="@p.EventID" asp-area="" asp-controller="EHome" asp-action="Detailed">@p.Header</a>
                         </address>
                         <time> @p.Date.ToString("MMMM d, yyyy")<sup>th</sup></time>
                     </header>
                     <div class="comcont" style="display:inline-block;float:left !important">
                         <p>@p.Description</p>
                     </div>
                     <img src="@((p.ImageName != null)?("~/Image/"+p.ImageName):("~/Image/SpotlightLogo.png"))" asp-append-version="true" style="float:right; width:100px !important">
                     <a asp-controller="EHome" asp-action="Index" asp-route-category="@p.Category" asp-route-currentPage="1" style="float:right; font:bold; padding-right:50px">
                         <p>@p.Category</p>
                     </a>
                     <p></p>
                 </article>
                 <br />
             </div>
         </div>
         <br/>
        }


<div page-model="@Model.PagingInfo" asp-controller="EHome" asp-action="Index"
     page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>

    </main>
</div>

@model AppUser
<div class="bgded overlay" style="background-image:url('/image/admin.jpg');">
    <section id="breadcrumb" class="hoc clear">
        <i class="fas fa-user fa-3x"></i>
        <h6 class="heading">Edit User</h6>
    </section>
</div>

<div class="wrapper row3">
    <main class="hoc container clear">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-controller="IdAdmin" asp-action="Edit" method="post">
            <div class="form-group">
                <label asp-for="Id"></label>
                <input asp-for="Id" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <div class="input-group" id="show_hide_password">
                    <input name="password" class="form-control" type="password">
                    <div class="input-group-addon">
                        <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="IdAdmin" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </main>
</div>
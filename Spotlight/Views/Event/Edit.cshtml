@model Event
@{
    ViewBag.Title = "Edit Event";
}

<div class="bgded overlay" style="background-image:url('/Image/pozadina.jpg');">
    <section id="breadcrumb" class="hoc clear">
        <i class="fas fa-edit fa-3x"></i>
        <h6 class="heading">@ViewBag.Title</h6>
    </section>
</div>


<div class="wrapper row3">
    <main class="hoc container clear">
        <form asp-controller="EAdmin" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="EventID" />
            <div class="form-group">
                <label asp-for="Header"></label>
                <div><span asp-validation-for="Header" class="text-danger"></span></div>
                <input asp-for="Header" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <div><span asp-validation-for="Description" class="text-danger"></span></div>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Category"></label>
                <div><span asp-validation-for="Category" class="text-danger"></span></div>
                <input asp-for="Category" class="form-control" />
            </div>
            <div class="form-group">
                <img id="eventSlika" src="@("~/Image/"+Model.ImageName)" asp-append-version="true">
            </div>
            <div class="form-group">
                <label asp-for="ImageFile"></label>
                <div><span asp-validation-for="ImageFile" class="text-danger"></span></div>
                <input asp-for="ImageFile" accept="image/*" />
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Save</button>
                <a asp-controller="EAdmin" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>

    </main>
</div>
